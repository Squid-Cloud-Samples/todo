{
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "pr",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepPatterns": ["*"],
      "excludePackagePatterns": ["@squidcloudio"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@squidcloud/cli", "@squidcloud/backend"],
      "groupName": "Squid backend dependencies"
    }
  ]
}