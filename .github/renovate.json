{
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "pr",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackagePatterns": ["!(@squidcloud/*)"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@squidcloud/react", "@squidcloud/cli", "@squidcloud/backend"],
      "groupName": "@squidcloud core dependencies",
      "automerge": true
    },
    {
      "matchPackageNames": ["@squidcloud/samples", "@squidcloud/ui"],
      "groupName": "@squidcloud sample dependencies"
    }
  ]
}