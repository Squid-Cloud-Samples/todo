{
  "extends": ["config:base"],
  "automerge": true,
  "automergeType": "pr",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "packageNames": ["@squidcloud/samples", "@squidcloud/cli", "@squidcloud/backend"],
      "groupName": "@squidcloud dependencies",
      "automerge": true
    },
    {
      "matchDepPatterns": ["*"],
      "enabled": false
    }
  ]
}